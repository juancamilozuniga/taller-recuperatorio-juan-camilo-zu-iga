function esPalindromo(palabra) {
  let palabraReversa = "";
  
  
  for (let i = palabra.length - 1; i >= 0; i--) {
    palabraReversa += palabra[i];
  }
  

  if (palabra === palabraReversa) {
    return true;
  } else {
    return false;
  }
}


console.log(esPalindromo("arenera")); 
console.log(esPalindromo("hola"));  